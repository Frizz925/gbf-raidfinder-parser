{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es2015.core"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}
